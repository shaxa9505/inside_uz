extends layout

block content
  if errorLink && errorLink.length > 0
    p.alert.alert-danger #{errorLink}
  .content-header: .container-fluid: .row.mb-2
    .col-sm-6: a(href="/admin").m-0 Панель администратора
    .col-sm-6: ol.breadcrumb.float-sm-right: li.breadcrumb-item: a(href="/") Перейти на сайт  
  .admin_header
    .container 
      .row
        .col-lg-3
          a(href="/admin/students").block
            i.bi.bi-graph-up-arrow
            span.text Количество моих учеников
            if students
              each student, i in students
                span.number #{student.graduates + student.currentStudents}
            else 
              span.number 0
        .col-lg-3
          a(href="/admin/courses").block
            i.bi.bi-mortarboard
            span.text Курсы
            if courses 
              span.number #{courses.length}
            else 
              span.number 0
        .col-lg-3
          a(href="/admin/clients").block
            i.bi.bi-person-check-fill
            span.text Новые ученики
            if clients
              span.number #{clients.length}
            else 
              span.number 0
        .col-lg-3
          a(href="/admin/networks").block
            i.bi.bi-hdd-network
            span.text Социальные сети
            span.number

